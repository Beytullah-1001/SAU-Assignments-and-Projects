import java.io.FileInputStream;
import java.io.IOException;
import java.util.Scanner;

public class Dosya {
	private String kisiler="Kisiler.txt";
	private String sayilar="Sayilar.txt";
	
	public Dosya() {
	
	}
	public void readFile() {
		try  
		{  
		//the file to be opened for reading  
		FileInputStream fis=new FileInputStream(sayilar);      
		FileInputStream fis2=new FileInputStream(kisiler);
		Scanner sc=new Scanner(fis);    
		Scanner sc2=new Scanner(fis2);
		
		//file to be scanned  
		//returns true if there is another line to read  
		while(sc.hasNextLine())  
		{
			String betNumber=sc.nextLine();
			while(sc2.hasNextLine()) {
				System.out.println(sc.nextLine());
			}
		     
		}  
		sc.close();     //closes the scanner  
		}  
		catch(IOException e)  
		{  
		e.printStackTrace();  
		}  
	}

}
